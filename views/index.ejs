<html>
<head>
    <link rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../css/body.css">
    <link rel="stylesheet" type="text/css" href="body.css">
</head>

<body>
    <div class="container" style="padding:20px; max-width: 800px;">
        <div class="card card-body bg-light">
            <h1><%= title %></h1>

            <br>
            <hr>
            <a href="/logged-in-page">logged-in-page</a>
            <a href="/admin-page">admin-page</a>
            <br>
            <hr>
            <% if (user) { %>
                <h3>you're logged in as: <%= user.name %>: <%= user.Role %></h3>
                <p>email: <%= user.email %></p>
            <% } else { %>
                <h3>you're not logged in</h3>
            <% } %>
            <hr>

                <form action="users/register" method="post">
                    <h3>register</h3>
                    <input type="text" name="Name" placeholder="username"><br>
                    <input type="text" name="email" placeholder="email"><br>
                    <input type="password" name="Password" placeholder="Password"><br>
                    <input type="submit" value="submit" class="btn btn-primary">
                </form>
                <hr>
                <form action="users/login" method="post">
                    <h3>log in</h3>
                    <input type="text" name="email" placeholder="email"><br>
                    <input type="password" name="Password" placeholder="Password"><br>
                    <input type="submit" value="submit" class="btn btn-primary">
                </form>
                <br>
                <hr>
                <p>sessionID: <%= sessionID %></p>


                    <input type="submit" value="delete" class="btn btn-primary" onclick="delUser" >


                    <form action="users/logout" method="get">
                        <h3>logout</h3>
                        <input type="submit" value="submit" class="btn btn-primary">
                    </form>

            </div>
        </div>
        <script>
 function delUser() {
fetch('/users/delete')
}
        </script>
    </body>
    </html>